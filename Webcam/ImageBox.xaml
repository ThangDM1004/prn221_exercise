<Window x:Class="Webcam.ImageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Webcam"
        mc:Ignorable="d"
        Title="ImageBox" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Name="imageBox" HorizontalAlignment="Left" Height="345" Margin="10,10,0,0" VerticalAlignment="Top" Width="777"/>
        <Button Visibility="Visible" Name="DeleteBtn" Content="Delete" HorizontalAlignment="Left" Margin="145,369,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.081,0.171" Height="37" Width="109" Click="DeleteBtn_Click"/>
        <Button Name="UploadBtn" Content="Upload" HorizontalAlignment="Center" Margin="0,369,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.081,0.171" Height="37" Width="108" Click="UploadBtn_Click"/>
        <TextBlock Visibility="Hidden" HorizontalAlignment="Center" Margin="0,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
