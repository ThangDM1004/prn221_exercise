<Window x:Class="BT2.CreatePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BT2"
        mc:Ignorable="d"
        Title="CreatePopup" Height="100" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <TextBox FontSize="20" HorizontalAlignment="Left" Margin="30,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="182" Height="38" Grid.ColumnSpan="2"/>
        <Button Content="Create" Name="folderName" HorizontalAlignment="Left" Margin="82,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.035,-0.018" Grid.Column="1" Click="Button_Click" Height="38" Width="45"/>

    </Grid>
</Window>
